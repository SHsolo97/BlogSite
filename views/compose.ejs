<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/" method="post">
  <div class="form-group">
    <label for="titleInput">Title</label>
    <input class="form-control" id="titleInput" type="text" name="titleInput" >
  </div>
  <div class="form-group">
    <label for="blogInput">Post</label>
    <textarea class="form-control" rows="7" name="blogInput" id="blogInput" cols="40" rows="5"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
